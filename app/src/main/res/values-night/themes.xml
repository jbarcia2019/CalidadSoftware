<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FiveCalendar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="background">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.FiveCalendar.EditText" parent="Theme.FiveCalendar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="Theme.FiveCalendar.Menu" parent="Theme.FiveCalendar">
        <item name="background">@color/menu_background</item>
    </style>
    <style name="Theme.FiveCalendar.CalendarViewDateText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorFocusedHighlight">@color/purple_500</item>
    </style>
    <style name="Theme.FiveCalendar.CalendarViewWeekText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/teal_200</item>
    </style>
    <style name="Theme.FiveCalendar.CalendarView" parent="Theme.FiveCalendar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="Theme.FiveCalendar.Button" parent="Theme.FiveCalendar">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>
    <style name="Theme.FiveCalendar.TareaButton" parent="Theme.FiveCalendar">
        <item name="backgroundTint">@color/cardview_dark_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Theme.FiveCalendar.PlainText" parent="Theme.FiveCalendar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="Theme.FiveCalendar.Dialog" parent="Theme.FiveCalendar">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>